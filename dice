import random
import time

roll_dice="yes"

while roll_dice == "yes" or roll_dice=="y":
  print("dice is rolling....")
  time.sleep(2)
  x = random.randint(1,6)
  y = random.randint(1,6)

  if x==y:
    print("you rolled a double: ")
  else:
    print("keep trying!")

  print("dice 1 = ",x,"\ndice 2 = ",y)
  roll_dice = input("do u want to play again: ")
